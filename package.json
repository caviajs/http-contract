{
  "name": "@caviajs/http-contract",
  "description": "a micro framework for node.js",
  "version": "0.0.1",
  "author": "Pawe≈Ç Partyka",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "generate-contract": "dist/generate-contract.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register jest --runInBand",
    "test:watch": "jest --watch",
    "release": "npm run build && npm publish",
    "prepare": "husky install"
  },
  "dependencies": {
    "colorette": "~2.0.16",
    "file-type": "~17.1.1",
    "no-case": "~3.0.4",
    "yargs": "~17.5.0"
  },
  "devDependencies": {
    "@caviajs/http-client": "~1.0.0",
    "@caviajs/http-router": "~1.0.0",
    "@commitlint/cli": "~17.0.0",
    "@commitlint/config-conventional": "~17.0.0",
    "@types/jest": "~27.4.1",
    "@types/node": "~17.0.36",
    "@types/yargs": "~17.0.9",
    "husky": "~8.0.1",
    "jest": "~27.5.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~27.1.4",
    "ts-node": "~9.1.1",
    "typescript": "~4.2.4"
  },
  "peerDependencies": {
    "@caviajs/http-client": "~1.0.0",
    "@caviajs/http-router": "~1.0.0",
    "rxjs": "~7.5.4"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "test"
    ],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  }
}
